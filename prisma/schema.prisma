generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  phone     String?
  address   String?
  city      String?
  country   String?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String      @id @default(cuid())
  name        String
  brand       String
  price       Float
  description String      @db.Text
  images      String[]
  stock       Int         @default(0)
  processor   String
  ram         String
  storage     String
  display     String
  gpu         String?
  battery     String?
  weight      Float?
  os          String
  category    String      @default("laptop")
  featured    Boolean     @default(false)
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([brand])
  @@index([price])
  @@index([featured])
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
  items       OrderItem[]
  total       Float
  status      OrderStatus @default(PENDING)
  
  customerName  String
  customerEmail String
  customerPhone String
  
  shippingAddress String
  shippingCity    String
  shippingCountry String
  shippingZip     String?
  
  paymentMethod String
  paymentStatus String    @default("pending")
  
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([orderNumber])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float

  @@index([orderId])
  @@index([productId])
}